<h1>Sign up</h1>

<%= form_for(@teacher) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<div class="field">
<%= f.label :email %>
<%= f.email_field :email %>
</div>
<div class="field">
<%= f.label :password %>
<%= f.password_field :password_digest %>
</div>

<%= f.submit "Create my account", class: "btn btn-primary" %>
<% end %>
